<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/mainLayout"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="MineBoard"
    android:background="@drawable/minefield_bg_image">


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/flagMode"
        android:src="@drawable/flag_white"
        android:background="@android:color/transparent"
        android:longClickable="true"
        android:clickable="true"
        android:backgroundTint="#464444"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView2" />

    <TextView
        android:text="Time: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="31dp"
        android:layout_marginBottom="26dp"
        android:id="@+id/textView2"
        android:background="@android:color/white"
        android:textSize="24sp" />

</RelativeLayout>