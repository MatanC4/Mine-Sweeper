<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="Welcome_Screen"
    android:background="@drawable/minefield_bg_image">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:outlineProvider="bounds"
        android:weightSum="1"
        android:soundEffectsEnabled="true"
        android:id="@+id/linearLayout"
        android:paddingTop="30dp"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="274dp"
            android:layout_height="70dp"
            android:text="Let&apos;s Play!"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal"
            android:textColor="#676770"
            android:textSize="50dp"
            android:textColorHighlight="#3f3d3d"
            android:textAlignment="center"
            android:outlineProvider="bounds" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="EASY"
            android:id="@+id/level1"
            android:background="@android:color/transparent"
            android:drawableTint="#2f4091"
            android:shadowColor="#7dbcd3"
            android:textColor="#D7FF33"
            android:layout_marginTop="0dp"
            android:textSize="25dp"
            android:contextClickable="true"
            android:clickable="true"
            android:backgroundTintMode="src_over"
            android:outlineProvider="paddedBounds"
            android:layout_weight="0.20"
            android:fadingEdge="horizontal"
            android:autoText="true"
            android:longClickable="true"
            android:textStyle="bold" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Medium"

            android:id="@+id/level2"
            android:background="@android:color/transparent"
            android:drawableTint="#2f4091"
            android:shadowColor="#7dbcd3"
            android:layout_marginTop="0dp"
            android:textColor="#FFA500"
            android:textSize="25dp"
            android:backgroundTintMode="src_over"
            android:clickable="true"
            android:contextClickable="true"
            android:fadingEdge="horizontal"
            android:outlineProvider="paddedBounds"
            android:layout_weight="0.16"
            android:textStyle="bold" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Hard"
            android:id="@+id/level3"
            android:background="@android:color/transparent"
            android:drawableTint="#2f4091"
            android:shadowColor="#7dbcd3"
            android:layout_marginTop="0dp"
            android:textColor="#FF3333"
            android:textSize="25dp"
            android:backgroundTintMode="src_over"
            android:contextClickable="true"
            android:clickable="true"
            android:outlineProvider="paddedBounds"
            android:padding="3dp"
            android:layout_weight="0.12"
            android:paddingBottom="15dp"
            android:textStyle="bold" />

        <Button
            android:layout_width="170dp"
            android:layout_height="150dp"
            android:text="Start"
            android:id="@+id/play_btn"
            android:layout_marginTop="30dp"
            android:background="@drawable/mine_start_game"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:textSize="20dp" />

    </LinearLayout>


</RelativeLayout>